<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainScene" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Package.MainScreenController">
   <children>
      <Label alignment="TOP_CENTER" prefHeight="18.0" prefWidth="640.0" style="-fx-border-color: black; -fx-background-color: #c4c4c4;" text="Effort Logger">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label layoutX="245.0" layoutY="64.0" text="Select an Activity">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <VBox alignment="TOP_CENTER" layoutX="225.0" layoutY="100.0" prefHeight="200.0" prefWidth="190.0">
         <children>
            <Button fx:id="console" mnemonicParsing="false" onAction="#navConsole" text="EffortLogger Console" />
            <Label />
            <Button fx:id="scrub" mnemonicParsing="false" onAction="#navScrub" text="Scrub Data" textAlignment="CENTER" />
            <Label />
            <Button fx:id="mod" mnemonicParsing="false" onAction="#navMod" text="Modify Log Entry" />
            <Label />
            <Button fx:id="list" mnemonicParsing="false" onAction="#navList" text="View Entries" />
            <Label />
            <Button fx:id="man" mnemonicParsing="false" onAction="#navManualTask" text="Add Entry Manually" />
            <Label />
         </children>
      </VBox>
      <HBox alignment="TOP_CENTER" layoutX="220.0" layoutY="338.0" prefHeight="30.0" prefWidth="200.0">
         <children>
            <Button fx:id="logout" mnemonicParsing="false" onAction="#logOut" text="Log Out" />
            <Label text="       " />
            <Button fx:id="exit" mnemonicParsing="false" onAction="#close" text="Exit EffortLogger" />
         </children>
      </HBox>
   </children>
</AnchorPane>
